DEPTH		= ../../../../..
topsrcdir	= @top_srcdir@
srcdir		= @srcdir@
VPATH		= @srcdir@

include $(DEPTH)/config/autoconf.mk

MODULE            = $(MOZ_APP_NAME)
LIBRARY_NAME      = $(MOZ_APP_NAME)
IS_COMPONENT      = 1
USE_STATIC_LIBS   = 1
EMBED_MANIFEST_AT = 2

REQUIRES	= \
    xpcom \
    imglib2 \
    string \
    gfx \
    necko \
    appshell \
    docshell \
    widget \
    dom \
    caps \
    content \
    prism_win \
    $(NULL)

CPPSRCS = \
    nsICOEncoder.cpp \
    nsDesktopEnvironmentWin.cpp \
    nsNativeMenu.cpp \
    nsNotificationArea.cpp \
    nsOSIntegrationModule.cpp \
    nsSystemMenu.cpp \
    $(NULL)

LOCAL_INCLUDES += -I$(srcdir)/..

EXTRA_DSO_LDOPTS = \
    ../$(LIB_PREFIX)$(MOZ_APP_NAME)_static.$(LIB_SUFFIX) \
    $(LIBXUL_DIST)/lib/$(LIB_PREFIX)xpcomglue_s.$(LIB_SUFFIX) \
    $(XPCOM_FROZEN_LDOPTS) \
    $(NSPR_LIBS) \
    $(NULL)
    
OS_LIBS += $(call EXPAND_LIBNAME,ole32 version uuid shell32)

include $(topsrcdir)/config/rules.mk
